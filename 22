<body>

  <div class="container">
    <h1>22</h1>
    <div class="subtitle">il nostro posto</div>

    <div class="affirmation" id="affirmation"></div>

    <textarea id="input" placeholder="scrivi quello che ti fa paura"></textarea>
    <br>
    <button onclick="saveNote()">lascialo qui</button>

    <div class="board" id="board"></div>
    <div class="board-footer">restano qui finch√© non li guardiamo insieme,</div>
  </div>

  <script>
    const affirmations = [
      "ti amo anche quando hai paura,",
      "sono qui,",
      "siamo io e tu pic,",
      "dimmi frankie, parla con me",
      "sono qui,",
      "non devi proteggermi dai tuoi pensieri,",
      "ti ascolto"
    ]

    function setAffirmation() {
      const el = document.getElementById("affirmation")
      const random = affirmations[Math.floor(Math.random() * affirmations.length)]
      el.textContent = random
    }

    function loadNotes() {
      const board = document.getElementById("board")
      board.innerHTML = ""
      const notes = JSON.parse(localStorage.getItem("22_notes")) || []
      notes.forEach(text => {
        const div = document.createElement("div")
        div.className = "note"
        div.textContent = text
        board.appendChild(div)
      })
    }

    function saveNote() {
      const input = document.getElementById("input")
      if (!input.value.trim()) return
      const notes = JSON.parse(localStorage.getItem("22_notes")) || []
      notes.unshift(input.value)
      localStorage.setItem("22_notes", JSON.stringify(notes))
      input.value = ""
      loadNotes()
      setAffirmation()
    }
    setAffirmation()
    loadNotes()
  </script>

</body>

</html>
